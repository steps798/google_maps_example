{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/src/**/*.ts",
    "app/src/**/*.tsx",
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.tsx",
    "typings"
  ],
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "./dist/types",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "baseUrl": "src",
    "paths": {
      "~components/*": ["components/*"],
      "~assets/*": ["assets/*"]
    }
  },
  "exclude": ["node_modules/**"]
}
